{
  "name": "react-ssr-multi-app",
  "description": "A universally rendered React-Apollo, multilingual multi application starter",
  "version": "1.0.0",
  "codename": "apple",
  "private": false,
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "concurrently --prefix \"[{name}]\" --names \"webpack-server,webpack-client,watch-server\" --kill-others \"npm run server:watch\" \"npm run client:watch\" \"npm run server:restart\"",
    "staging": "npm run universal:build",
    "production": "npm run universal:build-prod",
    "client:build": "npm run clean && NODE_ENV=\"staging\" webpack",
    "client:build-prod": "npm run clean && NODE_ENV=\"production\" webpack",
    "client:watch": "webpack",
    "server:build": "SERVER_RENDER=\"true\" NODE_ENV=\"staging\" webpack --config webpack.config.server.js",
    "server:build-prod": "SERVER_RENDER=\"true\" NODE_ENV=\"production\" webpack --config webpack.config.server.js",
    "server:watch": "SERVER_RENDER=\"true\" webpack --config webpack.config.server.js",
    "server:restart": "nodemon ./build/app.js",
    "universal:build": "npm run client:build && npm run server:build",
    "universal:build-prod": "npm run client:build-prod && npm run server:build-prod",
    "clean": "rm -rf ./build",
    "lint": "eslint ./source/js ./webpack.config.js -f table --ext .js --ext .jsx || true",
    "lint:fix": "eslint --fix ./source/js ./webpack.config.js -f table --ext .js --ext .jsx || true",
    "test": "jest --verbose",
    "add:app": "chmod +x ./lib/addApp.sh && chmod +x ./source/js/server/routes.js && ./lib/addApp.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-syntax-decorators": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^22.4.1",
    "babel-loader": "^8.0.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-plugin-styled-components": "^1.5.1",
    "circular-dependency-plugin": "^5.0.2",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "~4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.5",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "postcss-loader": "^3.0.0",
    "react-svg-loader": "^2.1.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "svgo": "^1.1.1",
    "svgo-loader": "^2.2.0",
    "webpack": "^4.27.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "^2.4.7",
    "apollo-link": "^1.2.4",
    "apollo-link-batch-http": "^1.2.4",
    "apollo-link-context": "^1.0.10",
    "apollo-link-error": "^1.1.2",
    "apollo-link-http": "^1.5.7",
    "apollo-upload-client": "^9.1.0",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "history": "^4.7.2",
    "hoist-non-react-statics": "^3.0.1",
    "i18next": "^12.1.0",
    "i18next-express-middleware": "^1.5.0",
    "i18next-localstorage-cache": "^1.1.1",
    "i18next-node-fs-backend": "^2.1.0",
    "i18next-xhr-backend": "^1.5.1",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "react": "^16.6.3",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-i18next": "^8.3.8",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-router-last-location": "^1.0.3",
    "react-transition-group": "^2.5.3",
    "serialize-javascript": "^1.4.0",
    "styled-components": "^4.1.2",
    "universal-cookie": "^3.0.7"
  },
  "author": "Salo Creative",
  "jest": {
    "setupFiles": [
      "<rootDir>/source/js/__tests__/setup.js"
    ],
    "testRegex": "/__tests__/.*\\.test\\.js$"
  }
}
